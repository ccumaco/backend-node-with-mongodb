<div id="new-note">
    <h2>New Note</h2>
    {{#each errors}}
        <h2>{{text}}</h2>
    {{/each}}
    <form action="/notes/new-note" method="POST">
        <div class="form-group">
            <input type="text" name="title" id="title" placeholder="escribe el titulo de tu nota" autofocus>
        </div>
        <div class="form-group">
            <textarea name="description" id="description" cols="20" rows="5"></textarea>
        </div>
        <div class="form-group">
            <button class="form-button" type="submit"> Guardar</button>
        </div>
    </form>
</div>